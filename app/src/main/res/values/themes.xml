<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GCase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="github_logo">@drawable/github_logo</item>
        <item name="github_mark">@drawable/github_mark</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/chinese_black</item>
        <item name="colorPrimaryVariant">@color/chinese_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>